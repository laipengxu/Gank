<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width_normal"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_first"
        style="@style/normal_text_style"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/text_margin_normal"
        android:paddingTop="@dimen/text_margin_normal"
        android:textSize="@dimen/text_size_medium" />

    <View
        style="@style/normal_line_style" />

    <TextView
        android:id="@+id/btn_second"
        style="@style/normal_text_style"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/text_margin_normal"
        android:paddingTop="@dimen/text_margin_normal"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>